      if (hasNextCalled) {
        return actualTerm != null;
      }
      hasNextCalled = true;
      try {
        // if there are no more words
        if (!termEnum.next()) {
          actualTerm = null;
          return false;
        }
        // if the next word is in the field
        actualTerm = termEnum.term();
        String currentField = actualTerm.field();
        if (currentField != field) {
          actualTerm = null;
          return false;
        }
        return true;
      } catch (IOException e) {
        e.printStackTrace();
        return false;
      }
    }

