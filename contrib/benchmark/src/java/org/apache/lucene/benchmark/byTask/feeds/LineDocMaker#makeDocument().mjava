  public Document makeDocument() throws Exception {

    String line;
    synchronized(this) {
      line = fileIn.readLine();
      if (line == null) {
        if (!forever) {
          throw new NoMoreDataException();
        }
        // Reset the file
        openFile();
        return makeDocument();
      }
    }

    if (doReuseFields)
      return getDocState().setFields(line);
    else
      return localDocState.setFields(line);
  }

