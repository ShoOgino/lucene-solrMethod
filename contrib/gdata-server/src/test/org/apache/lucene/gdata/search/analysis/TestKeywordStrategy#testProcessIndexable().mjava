        }
        assertNull(this.strategy.content);
        try {
            this.strategy.createLuceneField();
            fail("content is not set");
        } catch (GdataIndexerException e) {
        }

        String content = "fooBar";
        stub.setReturnNull(false);
        stub.setReturnValueTextContent(content);
