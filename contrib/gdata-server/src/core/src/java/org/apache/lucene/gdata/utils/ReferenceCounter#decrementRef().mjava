    /** 
     *  
     * Decrements the reference. If no references remain the 
     * {@link ReferenceCounter#close()} method will be invoked; 
     */ 
    public final void decrementRef() { 
        /*
         * close if less or equals 0
         */
        if (this.refcounter.decrementAndGet() <= 0) 
            close(); 
    } 

