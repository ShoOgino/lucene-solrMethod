  @Override
  public void close() throws IOException {
    try {
      // stuff 0s in until the "real" data is flushed:
      int stuffed = 0;
      while(upto > stuffed) {
        upto -= add(0)-1;
        assert upto >= 0;
        stuffed += 1;
      }
    } finally {
      out.close();
    }
  }

