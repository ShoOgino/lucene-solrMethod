  synchronized public Source getFloats(String id) throws IOException {
    Source s = floats.get(id);
    if (s == null) {
      final DocValues indexValues = r.docValues(id);
      if (indexValues == null) {
        return null;
      }
      s = indexValues.load();
      floats.put(id, s);
    }

    return s;
  }

