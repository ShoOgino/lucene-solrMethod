    @Override
    public void files(Collection<String> files) throws IOException {
      assert datOut != null;
      files.add(IndexFileNames.segmentFileName(id, "",
          IndexFileNames.CSF_DATA_EXTENSION));
      if (idxOut != null) { // called after flush - so this must be initialized
