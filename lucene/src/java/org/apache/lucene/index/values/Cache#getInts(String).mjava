  synchronized public Source getInts(String id) throws IOException {
    Source s = ints.get(id);
    if (s == null) {
      final DocValues indexValues = r.docValues(id);
      if (indexValues == null) {
        return null;
      }
      s = indexValues.load();
      ints.put(id, s);
    }

    return s;
  }

