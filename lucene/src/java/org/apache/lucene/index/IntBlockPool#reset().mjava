  public void reset() {
    if (bufferUpto != -1) {
      // Reuse first buffer
      if (bufferUpto > 0) {
        docWriter.recycleIntBlocks(buffers, 1, bufferUpto-1);
        Arrays.fill(buffers, 1, bufferUpto, null);
      }
      bufferUpto = 0;
      intUpto = 0;
      intOffset = 0;
      buffer = buffers[0];
    }
  }

