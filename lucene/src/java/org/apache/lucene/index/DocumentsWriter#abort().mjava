  void abort() throws IOException {
    threadPool.abort();
    try {
      try {
        abortedFiles = openFiles();
      } catch (Throwable t) {
        abortedFiles = null;
      }
  
      deletesInRAM.clear();
      // nocommit
  //        deletesFlushed.clear();
  
      openFiles.clear();
    } finally {
      threadPool.finishAbort();
    }

  }

