  void files(Directory dir, SegmentInfo info, Set<String> files)
      throws IOException {
    final Set<Codec> seen = new HashSet<Codec>();
    final Codec[] codecArray = codecs;
    for (Codec codec : codecArray) {
      if (!seen.contains(codec)) {
        seen.add(codec);
        codec.files(dir, info, files);
      }
    }
  }

