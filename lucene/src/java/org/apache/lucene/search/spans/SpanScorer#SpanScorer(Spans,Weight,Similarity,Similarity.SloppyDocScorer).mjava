  protected SpanScorer(Spans spans, Weight weight, Similarity similarity, Similarity.SloppyDocScorer docScorer)
  throws IOException {
    super(weight);
    this.similarity = similarity;
    this.docScorer = docScorer;
    this.spans = spans;

    if (this.spans.next()) {
      doc = -1;
    } else {
      doc = NO_MORE_DOCS;
      more = false;
    }
  }

