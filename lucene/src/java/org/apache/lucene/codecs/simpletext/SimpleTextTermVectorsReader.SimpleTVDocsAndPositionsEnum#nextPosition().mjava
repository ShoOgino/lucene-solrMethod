    @Override
    public int nextPosition() {
      assert (positions != null && nextPos < positions.length) ||
        startOffsets != null && nextPos < startOffsets.length;

      if (startOffsets != null) {
        offsetAtt.setOffset(startOffsets[nextPos],
                            endOffsets[nextPos]);
      }
      if (positions != null) {
        return positions[nextPos++];
      } else {
        nextPos++;
        return -1;
      }
    }

