    private void maybeSeek() throws IOException {
      if (seekPending) {
        if (pendingFP != lastBlockFP) {
          // need new block
          in.seek(pendingFP);
          lastBlockFP = pendingFP;
          blockReader.readBlock();
        }
        upto = pendingUpto;
        seekPending = false;
      }
    }

