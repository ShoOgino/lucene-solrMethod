  @Override
  public TokenStream reusableTokenStream(String fieldName, Reader reader)
      throws IOException {
    MockTokenizer t = (MockTokenizer) getPreviousTokenStream();
    if (t == null) {
      t = new MockTokenizer(reader, runAutomaton, lowerCase);
      setPreviousTokenStream(t);
    } else {
      t.reset(reader);
    }
    return t;
  }

