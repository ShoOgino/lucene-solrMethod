  private SortField.Type getDVStringSortType() {
    if (dvStringSorted) {
      // If you index as sorted source you can still sort by
      // value instead:
      return random.nextBoolean() ? SortField.Type.STRING : SortField.Type.STRING_VAL;
    } else {
      return SortField.Type.STRING_VAL;
    }
  }

