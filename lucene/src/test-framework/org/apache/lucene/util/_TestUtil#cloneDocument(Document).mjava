  public static Document cloneDocument(Document doc1) {
    final Document doc2 = new Document();
    for(IndexableField f : doc1) {
      Field field1 = (Field) f;
      
      Field field2 = new Field(field1.name(),
                               field1.getFieldType(),
                               field1.stringValue()
                               );
      doc2.add(field2);
    }

    return doc2;
  }

