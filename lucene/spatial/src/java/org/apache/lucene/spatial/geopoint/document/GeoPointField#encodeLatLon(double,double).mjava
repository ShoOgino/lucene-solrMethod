  /*************************
   * 31 bit encoding utils *
   *************************/
  public static long encodeLatLon(final double lat, final double lon) {
    long result = encode(lat, lon);
    if (result == 0xFFFFFFFFFFFFFFFFL) {
      return result & 0xC000000000000000L;
    }
    return result >>> 2;
  }

