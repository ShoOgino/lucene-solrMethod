    protected Triangle(Node a, Node b, Node c) {
      // sort nodes by morton value
      Node tA = a;
      Node tB = b;
      Node tC = c;
      Node temp;
      if (a.compare(b) > 0) {
        temp = tA;
        tA = tB;
        tB = temp;
      }
      if (b.compare(c) > 0) {
        temp = tB;
        tB = tC;
        tC = temp;
      }
      if (a.compare(b) > 0) {
        temp = tA;
        tA = tB;
        tB = temp;
      }
      this.vertex[0] = tA;
      this.vertex[1] = tB;
      this.vertex[2] = tC;
    }

