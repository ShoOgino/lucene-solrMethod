  @Override
  public float score() throws IOException {
    assert scoreMode.needsScores();
    assert iterating();
    final float score = in.score();
    assert !Float.isNaN(score) : "NaN score for in="+in;
    assert score <= maxScore();
    assert Float.compare(score, 0f) >= 0 : score;
    return score;
  }

