  /**
   * @return true if at least one field has any vectors
   */
  public boolean hasVectors() {
    if (isReadOnly()) {
      return hasVectors;
    }
    // mutable FIs must check
    for (FieldInfo fi : this) {
      if (fi.storeTermVector) {
        return true;
      }
    }
    return false;
  }

