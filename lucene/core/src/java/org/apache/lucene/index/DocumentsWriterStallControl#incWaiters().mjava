  private void incWaiters() {
    stallStartNS = System.nanoTime();
    if (infoStream.isEnabled("DW") && numWaiting == 0) {
      infoStream.message("DW", "now stalling flushes");
    }
    numWaiting++;
    assert waiting.put(Thread.currentThread(), Boolean.TRUE) == null;
    assert numWaiting > 0;
  }

