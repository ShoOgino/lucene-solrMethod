    @Override
    public String toString() {
      try {
        MergePolicy.OneMerge merge = getRunningMerge();
        if (merge == null) {
          merge = startMerge;
        }
        return "merge thread: " + tWriter.segString(merge.segments);
      } catch (Throwable e) {
        return "merge thread: " + e.toString();
      }
    }

