  public void addValue(int docID, long value) {
    mergeValue(value);

    // Fill in any holes:
    for (int i = pending.size(); i < docID; ++i) {
      pending.add(MISSING);
      mergeValue(0);
    }

    pending.add(value);

    updateBytesUsed();
    //System.out.println("ADD: " + value);
  }

