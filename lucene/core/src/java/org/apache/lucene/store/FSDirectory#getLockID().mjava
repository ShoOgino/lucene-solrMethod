  @Override
  public String getLockID() {
    ensureOpen();
    String dirName = directory.toString();  // name to be hashed

    int digest = 0;
    for(int charIDX=0;charIDX<dirName.length();charIDX++) {
      final char ch = dirName.charAt(charIDX);
      digest = 31 * digest + ch;
    }
    return "lucene-" + Integer.toHexString(digest);
  }

