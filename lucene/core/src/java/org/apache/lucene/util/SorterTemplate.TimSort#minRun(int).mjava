    /** Minimum run length for an array of length <code>length</code>. */
    int minRun(int length) {
      assert length >= TIMSORT_MINRUN;
      int n = length;
      int r = 0;
      while (n >= 64) {
        r |= n & 1;
        n >>>= 1;
      }
      final int minRun = n + r;
      assert minRun >= TIMSORT_MINRUN && minRun <= 64;
      return minRun;
    }

