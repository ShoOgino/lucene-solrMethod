  /** Just maps each UTF16 unit (char) to the ints in an
   *  IntsRef. */
  public static IntsRef toUTF16(CharSequence s, IntsRef scratch) {
    final int charLimit = s.length();
    scratch.grow(charLimit);
    int idx = 0;
    while(idx < charLimit) {
      scratch.ints[idx] = (int) s.charAt(idx);
      idx++;
    }
    scratch.offset = 0;
    scratch.length = idx;
    return scratch;
  }

