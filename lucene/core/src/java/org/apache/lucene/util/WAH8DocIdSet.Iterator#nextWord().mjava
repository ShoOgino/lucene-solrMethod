    void nextWord() {
      if (dirtyLength == 0 && !readSequence()) {
        return;
      }
      word = in.readByte();
      if (word == 0) {
        word = in.readByte();
        assert word != 0; // there can never be two consecutive null dirty words
        ++wordNum;
        --dirtyLength;
      }
      ++wordNum;
      --dirtyLength;
    }

