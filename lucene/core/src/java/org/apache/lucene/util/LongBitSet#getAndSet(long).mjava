  public boolean getAndSet(long index) {
    assert index >= 0 && index < numBits;
    int wordNum = (int) (index >> 6);      // div 64
    int bit = (int) (index & 0x3f);     // mod 64
    long bitmask = 1L << bit;
    boolean val = (bits[wordNum] & bitmask) != 0;
    bits[wordNum] |= bitmask;
    return val;
  }

