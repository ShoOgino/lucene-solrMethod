  /** 
   * Generate the 4 byte header, which contains (from lsb to msb):
   *
   * - 8 bits for uncompressed int num - 1 (use up to 7 bits i.e 128 actually)
   * - 5 bits for num of frame bits - 1
   * - other bits unused
   *
   */
  static int getHeader(int numInts, int numBits) {
    return  (numInts-1)
          | ((numBits-1) << 8);
  }

