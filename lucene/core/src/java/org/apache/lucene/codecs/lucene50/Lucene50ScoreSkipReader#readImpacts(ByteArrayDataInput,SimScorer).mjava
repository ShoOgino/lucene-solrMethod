  static float readImpacts(ByteArrayDataInput in, SimScorer scorer) throws IOException {
    int freq = 0;
    long norm = 0;
    float maxScore = 0;
    while (in.getPosition() < in.length()) {
      int freqDelta = in.readVInt();
      if ((freqDelta & 0x01) != 0) {
        freq += 1 + (freqDelta >>> 1);
        norm += 1 + in.readZLong();
      } else {
        freq += 1 + (freqDelta >>> 1);
        norm++;
      }
      maxScore = Math.max(maxScore, scorer.score(freq, norm));
    }
    return maxScore;
  }

