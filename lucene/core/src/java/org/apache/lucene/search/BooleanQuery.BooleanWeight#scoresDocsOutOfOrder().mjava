    @Override
    public boolean scoresDocsOutOfOrder() {
      if (minNrShouldMatch > 1) {
        // BS2 (in-order) will be used by scorer()
        return false;
      }
      for (BooleanClause c : clauses) {
        if (c.isRequired()) {
          // BS2 (in-order) will be used by scorer()
          return false;
        }
      }
      
      // scorer() will return an out-of-order scorer if requested.
      return true;
    }

