  /** advance a PhrasePosition and update 'end', return false if exhausted */
  private boolean advancePP(PhrasePositions pp) throws IOException {
    if (!pp.nextPosition()) {
      return false;
    }
    if (pp.position > end) {
      end = pp.position;
      advanceEndPostings = pp.ord;
    }
    if (pp.position == end) {
      if (pp.ord > advanceEndPostings) {
        advanceEndPostings = pp.ord;
      }
    }
    return true;
  }

