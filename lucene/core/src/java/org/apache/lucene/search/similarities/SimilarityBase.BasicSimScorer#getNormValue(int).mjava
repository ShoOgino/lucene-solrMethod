    private float getNormValue(int doc) throws IOException {
      if (norms == null) {
        return 1F;
      }
      int normsDocID = norms.docID();
      if (normsDocID < doc) {
        normsDocID = norms.advance(doc);
      }
      if (normsDocID == doc) {
        return decodeNormValue((byte) norms.longValue());
      } else {
        return decodeNormValue((byte) 0);
      }
    }

