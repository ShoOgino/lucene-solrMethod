  @Override
  public final int advance(int target) throws IOException {
    assert doc != NO_MORE_DOCS;
    while(true) {
      if (subScorers[0].advance(target) != NO_MORE_DOCS) {
        heapAdjust(0);
      } else {
        heapRemoveRoot();
        if (numScorers == 0) {
          return doc = NO_MORE_DOCS;
        }
      }
      int docID = subScorers[0].docID();
      if (docID >= target) {
        freq = -1;
        return doc = docID;
      }
    }
  }

