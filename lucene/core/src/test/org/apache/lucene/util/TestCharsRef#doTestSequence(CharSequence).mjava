  private void doTestSequence(CharSequence c) {
    
    // slice
    assertEquals("a", c.subSequence(0, 1).toString());
    // mid subsequence
    assertEquals("b", c.subSequence(1, 2).toString());
    // end subsequence
    assertEquals("bc", c.subSequence(1, 3).toString());
    // empty subsequence
    assertEquals("", c.subSequence(0, 0).toString());
    
    try {
      c.subSequence(-1, 1);
      fail();
    } catch (IndexOutOfBoundsException expected) {
      // expected exception
    }
    
    try {
      c.subSequence(0, -1);
      fail();
    } catch (IndexOutOfBoundsException expected) {
      // expected exception
    }
    
    try {
      c.subSequence(0, 4);
      fail();
    } catch (IndexOutOfBoundsException expected) {
      // expected exception
    }
    
    try {
      c.subSequence(2, 1);
      fail();
    } catch (IndexOutOfBoundsException expected) {
      // expected exception
    }
  }

