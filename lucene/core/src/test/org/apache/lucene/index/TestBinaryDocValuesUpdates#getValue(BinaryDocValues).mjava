  static long getValue(BinaryDocValues bdv) {
    BytesRef term = bdv.binaryValue();
    int idx = term.offset;
    assert term.length > 0;
    byte b = term.bytes[idx++];
    long value = b & 0x7FL;
    for (int shift = 7; (b & 0x80L) != 0; shift += 7) {
      b = term.bytes[idx++];
      value |= (b & 0x7FL) << shift;
    }
    return value;
  }

