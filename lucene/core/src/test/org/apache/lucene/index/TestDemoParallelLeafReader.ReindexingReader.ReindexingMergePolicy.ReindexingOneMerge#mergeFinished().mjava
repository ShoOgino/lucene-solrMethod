        @Override
        public void mergeFinished() throws IOException {
          Throwable th = null;
          for(LeafReader r : parallelReaders) {
            if (r instanceof ParallelLeafReader) {
              try {
                r.decRef();
              } catch (Throwable t) {
                if (th == null) {
                  th = t;
                }
              }
            }
          }

          // If any error occured, throw it.
          IOUtils.reThrow(th);
        }

