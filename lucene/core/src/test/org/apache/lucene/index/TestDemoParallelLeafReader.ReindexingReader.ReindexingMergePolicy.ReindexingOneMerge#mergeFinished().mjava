        @Override
        public void mergeFinished() throws IOException {
          Throwable th = null;
          for (ParallelLeafReader r : parallelReaders) {
            try {
              r.decRef();
            } catch (Throwable t) {
              if (th == null) {
                th = t;
              }
            }
          }

          // If any error occured, throw it.
          IOUtils.reThrow(th);
        }

