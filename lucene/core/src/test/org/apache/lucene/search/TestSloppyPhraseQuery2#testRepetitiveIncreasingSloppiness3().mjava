  public void testRepetitiveIncreasingSloppiness3() throws Exception {
    Term t = randomTerm();
    for (int i = 0; i < 10; i++) {
      PhraseQuery q1 = new PhraseQuery();
      q1.add(t);
      q1.add(t);
      q1.add(t);
      q1.setSlop(i);
      PhraseQuery q2 = new PhraseQuery();
      q2.add(t);
      q2.add(t);
      q2.add(t);
      q2.setSlop(i+1);
      assertSubsetOf(q1, q2);
    }
  }

