  /**
   * Require a configured pattern
   */
  @Override
  public void init(Map<String,String> args) 
  {
    super.init(args);
    pattern = getPattern( PATTERN );
    
    group = -1;  // use 'split'
    String g = args.get( GROUP );
    if( g != null ) {
      try {
        group = Integer.parseInt( g );
      }
      catch( Exception ex ) {
        throw new InitializationException("invalid group argument: " + g);
      }
    }
  }

