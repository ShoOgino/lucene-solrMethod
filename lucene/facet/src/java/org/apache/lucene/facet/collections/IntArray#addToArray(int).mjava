  /**
   * Adds a value to the array.
   * 
   * @param value
   *            value to be added
   */
  public void addToArray(int value) {
    if (size == data.length) {
      int[] newArray = new int[2 * size + 1];
      System.arraycopy(data, 0, newArray, 0, size);
      data = newArray;
    }
    data[size] = value;
    ++size;
    shouldSort = true;
  }

