    private void addDoc(IndexWriter writer, String content)
    {
      Document doc = new Document();

      doc.add(Field.Keyword("id","id" + docCount));
      doc.add(Field.UnStored("content", content));

      try {
        writer.addDocument(doc);
      }
      catch (IOException e) {
        e.printStackTrace();
      }
      docCount++;
    }

