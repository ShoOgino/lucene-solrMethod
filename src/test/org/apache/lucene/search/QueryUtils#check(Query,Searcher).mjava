  /** various query sanity checks on a searcher */
  public static void check(Query q1, Searcher s) {
    try {
      check(q1);
      if (s!=null && s instanceof IndexSearcher) {
        IndexSearcher is = (IndexSearcher)s;
        checkSkipTo(q1,is);
      }
    } catch (IOException e) {
      throw new RuntimeException(e);
    }
  }

