  /**
   * Itterate through the failures list, giving each object a
   * chance to throw an IOE
   */
  void maybeThrowDeterministicException() throws IOException {
    if (failures != null) {
      for(int i = 0; i < failures.size(); i++) {
        ((Failure)failures.get(i)).eval(this);
      }
    }
  }

