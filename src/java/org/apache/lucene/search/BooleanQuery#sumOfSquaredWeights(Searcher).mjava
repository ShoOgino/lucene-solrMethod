  float sumOfSquaredWeights(Searcher searcher)
       throws IOException {
    float sum = 0.0f;

    for (int i = 0 ; i < clauses.size(); i++) {
      BooleanClause c = (BooleanClause)clauses.elementAt(i);
      if (!c.prohibited)
	sum += c.query.sumOfSquaredWeights(searcher); // sum sub-query weights
    }

    return sum;
  }

