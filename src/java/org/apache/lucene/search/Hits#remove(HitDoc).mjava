    private final void remove(HitDoc hitDoc) {	  // remove from cache
        if (hitDoc.doc == null) {     // it's not in the list
            return;					  // abort
        }

        if (hitDoc.next == null) {
            last = hitDoc.prev;
        } else {
            hitDoc.next.prev = hitDoc.prev;
        }

        if (hitDoc.prev == null) {
            first = hitDoc.next;
        } else {
            hitDoc.prev.next = hitDoc.next;
        }

        numDocs--;
    }

