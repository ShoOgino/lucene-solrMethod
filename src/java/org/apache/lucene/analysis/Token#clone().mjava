  public Object clone() {
    try {
      Token t = (Token)super.clone();
      // Do a deep clone
      if (termBuffer != null) {
        t.termBuffer = (char[]) termBuffer.clone();
      }
      if (payload != null) {
        t.setPayload((Payload) payload.clone());
      }
      return t;
    } catch (CloneNotSupportedException e) {
      throw new RuntimeException(e);  // shouldn't happen
    }
  }

