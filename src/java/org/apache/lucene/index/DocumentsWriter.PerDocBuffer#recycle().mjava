    /**
     * Recycle the bytes used.
     */
    synchronized void recycle() {
      if (buffers.size() > 0) {
        setLength(0);
        
        // Recycle the blocks
        final int blockCount = buffers.size();
        
        final byte[][] blocks = buffers.toArray( new byte[blockCount][] );
        perDocAllocator.recycleByteBlocks(blocks, 0, blockCount);
        buffers.clear();
        sizeInBytes = 0;
        
        assert numBuffers() == 0;
      }
    }

