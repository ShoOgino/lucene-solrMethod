  public void writeProxByte(byte b) {
    assert prox != null;
    if (prox[proxUpto] != 0) {
      proxUpto = threadState.postingsPool.allocSlice(prox, proxUpto);
      prox = threadState.postingsPool.buffer;
      p.proxUpto = threadState.postingsPool.byteOffset;
      assert prox != null;
    }
    prox[proxUpto++] = b;
    assert proxUpto != prox.length;
  }

