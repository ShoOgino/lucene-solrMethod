  private static List<ValueSource> parseValueSourceList(StrParser sp, IndexSchema schema) throws ParseException {
    List<ValueSource> sources = new ArrayList<ValueSource>(3);
    for (;;) {
      sources.add(parseValSource(sp,schema)); 
      char ch = sp.peek();
      if (ch==')') break;
      sp.expect(",");
    }
    return sources;    
  }

