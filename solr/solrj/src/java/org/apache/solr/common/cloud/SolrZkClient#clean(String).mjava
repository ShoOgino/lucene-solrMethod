  // yeah, it's recursive :(
  public void clean(String path) throws InterruptedException, KeeperException {
    traverseZkTree(path, znode -> {
      try {
        if (!znode.equals("/")) {
          try {
            delete(znode, -1, true);
          } catch (NotEmptyException e) {
            clean(znode);
          }
        }
      } catch (NoNodeException r) {
        return;
      }
    });
  }

