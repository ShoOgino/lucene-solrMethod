    public Suggester hint(Hint hint, Object value) {
      if (hint == Hint.TARGET_NODE || hint == Hint.SRC_NODE) {
        ((Set) hints.computeIfAbsent(hint, h -> new HashSet<>())).add(value);
      } else {
        hints.put(hint, value == null ? null : String.valueOf(value));
      }
      return this;
    }

