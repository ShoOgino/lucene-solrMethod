  public Tuple read() throws IOException {
    a = streamA.read();

    if(b == null) {
      b = streamB.read();
    }

    while(true) {
      if(a.EOF) {
        return a;
      }

      if(b.EOF) {
        return b;
      }

      int i = comp.compare(a, b);
      if(i == 0) {
        return a;
      } else if(i < 0) {
        // a < b so advance a
        a = streamA.read();
      } else {
        // a > b so advance b
        b = streamB.read();
      }
    }
  }

