  public FacetStream(String zkHost,
                     String collection,
                     Map<String, String> props,
                     Bucket[] buckets,
                     Metric[] metrics,
                     FieldComparator[] sorts,
                     int limit) {
    this.zkHost  = zkHost;
    this.props   = props;
    this.buckets = buckets;
    this.metrics = metrics;
    this.limit   = limit;
    this.collection = collection;
    this.sorts = sorts;
  }

