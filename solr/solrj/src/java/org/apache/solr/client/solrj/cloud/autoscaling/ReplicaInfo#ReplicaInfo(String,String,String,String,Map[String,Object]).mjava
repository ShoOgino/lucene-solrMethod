  public ReplicaInfo(String name, String coreName, String coll, String shard, Map<String, Object> vals) {
    this.name = name;
    this.core = coreName == null ? (String) vals.get("core") : coreName;
    if (vals != null) {
      this.variables.putAll(vals);
    }
    this.collection = coll;
    this.shard = shard;
  }

