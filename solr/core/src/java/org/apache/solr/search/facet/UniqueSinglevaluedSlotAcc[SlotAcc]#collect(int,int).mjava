  @Override
  public void collect(int doc, int slotNum) {
    int ord = si.getOrd(doc + currentDocBase);
    if (ord < 0) return;  // -1 means missing

    FixedBitSet bits = arr[slotNum];
    if (bits == null) {
      bits = new FixedBitSet(nTerms);
      arr[slotNum] = bits;
    }
    bits.set(ord);
  }

