  public synchronized void exitWhenFinished() {
    // synchronized block protects reaper
    exitWhenFinished = true;
    if (reaper != null) {
      synchronized (reaper) {
        reaper.interrupt();
        try {
          reaper.join();
        } catch (InterruptedException e) { 
          Thread.currentThread().interrupt();
        }
      }
    }
  }

