  public SolrDispatchFilter() {
    // turn on test mode when running tests
    assert testMode = true;
    
    if (testMode == null) {
      testMode = false;
    } else {
      String tm = System.getProperty("solr.tests.doContainerStreamCloseAssert");
      if (tm != null) {
        testMode = Boolean.parseBoolean(tm);
      } else {
        testMode = true;
      }
    }
  }

