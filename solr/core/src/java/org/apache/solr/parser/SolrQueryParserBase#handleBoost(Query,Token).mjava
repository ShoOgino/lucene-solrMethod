  // called from parser
  Query handleBoost(Query q, Token boost) {
    if (boost != null) {
      float boostVal = Float.parseFloat(boost.image);
      // avoid boosting null queries, such as those caused by stop words
      if (q != null) {
        q.setBoost(q.getBoost() * boostVal);
      }
    }
    return q;
  }

