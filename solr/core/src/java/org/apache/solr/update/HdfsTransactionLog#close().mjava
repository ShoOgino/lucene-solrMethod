  @Override
  public void close() {
    try {
      if (debug) {
        log.debug("Closing tlog" + this);
      }

      doCloseOutput();

    } catch (IOException e) {
      log.error("Exception closing tlog.", e);
      throw new SolrException(SolrException.ErrorCode.SERVER_ERROR, e);
    } finally {
      isClosed  = true;
      assert ObjectReleaseTracker.release(this);
      if (deleteOnClose) {
        try {
          fs.delete(tlogFile, true);
        } catch (IOException e) {
          throw new SolrException(SolrException.ErrorCode.SERVER_ERROR, e);
        }
      }
    }
  }

