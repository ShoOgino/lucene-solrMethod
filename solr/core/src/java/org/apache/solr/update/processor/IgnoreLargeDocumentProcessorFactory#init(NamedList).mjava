  @Override
  public void init(NamedList args) {
    maxDocumentSize = args.toSolrParams().required().getLong(LIMIT_SIZE_PARAM);
    args.remove(LIMIT_SIZE_PARAM);

    if (args.size() > 0) {
      throw new SolrException(SERVER_ERROR,
          "Unexpected init param(s): '" +
              args.getName(0) + "'");
    }
  }

