    /** Suspends current SolrRequestInfo invoke the given action, and resumes then */
    static <T> T doInSuspension(Callable<T> action) throws Exception {
     
      final SolrRequestInfo info = threadLocal.get();
      try {
        threadLocal.remove();
        return action.call();
      } finally {
        setRequestInfo(info); 
      }
    }

