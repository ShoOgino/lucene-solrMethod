  public void close() {
    this.isClosed = true;
    try {
      client.getConnectionManager().shutdown();
    } catch (Throwable e) {
      SolrException.log(log, e);
    }
    try {
      ExecutorUtil.shutdownNowAndAwaitTermination(recoveryCmdExecutor);
    } catch (Throwable e) {
      SolrException.log(log, e);
    }
  }

