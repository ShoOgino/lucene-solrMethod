  /*
   * (non-Javadoc)
   * 
   * @see org.apache.solr.core.DirectoryFactory#close()
   */
  @Override
  public void close() throws IOException {
    synchronized (this) {
      for (CacheValue val : byDirectoryCache.values()) {
        val.directory.close();
      }
      byDirectoryCache.clear();
      byPathCache.clear();
    }
  }

