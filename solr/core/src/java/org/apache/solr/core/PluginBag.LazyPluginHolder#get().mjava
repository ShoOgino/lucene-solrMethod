    @Override
    public T get() {
      if (lazyInst != null) return lazyInst;
      if (solrException != null) throw solrException;
      if (createInst()) {
        // check if we created the instance to avoid registering it again
        registerMBean(lazyInst, core, pluginInfo.name);
      }
      return lazyInst;
    }

