    public boolean write(int docId, LeafReader reader, EntryWriter ew, int fieldIndex) throws IOException {
      NumericDocValues vals = DocValues.getNumeric(reader, this.field);
      long val;
      if (vals.advance(docId) == docId) {
        val = vals.longValue();
      } else {
        val = 0;
      }
      ew.put(field, val);
      return true;
    }

