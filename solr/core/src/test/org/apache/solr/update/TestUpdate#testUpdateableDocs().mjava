    // Test both by running the same test with and without commits

    // do without commits
    doUpdateTest(new Callable() {
      @Override
      public Object call() throws Exception {
        return null;
      }
    });

    // do with commits
    doUpdateTest(new Callable() {
      @Override
      public Object call() throws Exception {
        assertU(commit("softCommit","false"));
        return null;
      }
    });


  }

