  @Override
  @After
  public void tearDown() throws Exception {
    System.clearProperty("zkHost");
    
    if (cores != null) {
      cores.shutdown();
      cores = null;
    }
    
    if (null != zkServer) {
      zkServer.shutdown();
      zkServer = null;
    }
    zkDir = null;
    
    super.tearDown();
  }

