  @Override
  public void tearDown() throws Exception {
    super.tearDown();
    if (solrj != null) {
      solrj.shutdown();
    }
    System.clearProperty("numShards");
    System.clearProperty("zkHost");
    System.clearProperty("solr.xml.persist");
    
    // insurance
    DirectUpdateHandler2.commitOnClose = true;
  }

