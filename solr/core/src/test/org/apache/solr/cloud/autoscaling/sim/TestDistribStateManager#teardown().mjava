  @After
  public void teardown() throws Exception {
    if (solrZkClient != null) {
      solrZkClient.close();
      solrZkClient = null;
    }
    if (zkTestServer != null) {
      zkTestServer.shutdown();
      zkTestServer = null;
    }
    if (stateManager != null) {
      stateManager.close();
    }
    stateManager = null;
  }

