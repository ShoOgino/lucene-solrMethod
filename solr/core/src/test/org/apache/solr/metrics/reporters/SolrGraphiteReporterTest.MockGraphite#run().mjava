    public void run() {
      while (!stop) {
        try {
          Socket s = server.accept();
          BufferedReader br = new BufferedReader(new InputStreamReader(s.getInputStream(), "UTF-8"));
          String line;
          while ((line = br.readLine()) != null) {
            lines.add(line);
          }
        } catch (Exception e) {
          stop = true;
        }
      }
    }

