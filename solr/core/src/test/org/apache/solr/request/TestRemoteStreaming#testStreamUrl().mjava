    String streamUrl = solrServer.getBaseURL()+"/select?q=*:*&fl=id&wt=csv";

    String getUrl = solrServer.getBaseURL()+"/debug/dump?wt=xml&stream.url="+URLEncoder.encode(streamUrl,"UTF-8");
