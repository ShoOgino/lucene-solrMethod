  public void testMinExactHits() {
    assertQ("minExactHits is lower than numFound,should produce approximated results",
            req("q", "field1_s:foo", 
                "minExactHits", "2",
                "rows", "2")
            ,"//*[@numFoundExact='false']"
            ,"//*[@numFound<='" + NUM_DOCS + "']"
            );
    assertQ("minExactHits is higher than numFound,should produce exact results",
        req("q", "field1_s:foo", 
            "minExactHits", "200",
            "rows", "2")
        ,"//*[@numFoundExact='true']"
        ,"//*[@numFound='" + NUM_DOCS + "']"
        );
  }

