  public static void kill(CloudJettyRunner cjetty) throws Exception {
    JettySolrRunner jetty = cjetty.jetty;
    monkeyLog("kill shard! " + jetty.getLocalPort());
    
    jetty.stop();
    
    stop(jetty);
    
    if (!jetty.isStopped()) {
      throw new RuntimeException("could not kill jetty");
    }
  }

