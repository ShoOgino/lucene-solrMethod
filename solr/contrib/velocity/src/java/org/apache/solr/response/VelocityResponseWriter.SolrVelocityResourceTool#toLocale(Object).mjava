    // Why did Velocity Tools make this private?  Copied from ResourceTools.java
    private Locale toLocale(Object obj) {
      if (obj == null) {
        return null;
      }
      if (obj instanceof Locale) {
        return (Locale) obj;
      }
      String s = String.valueOf(obj);
      return ConversionUtils.toLocale(s);
    }

