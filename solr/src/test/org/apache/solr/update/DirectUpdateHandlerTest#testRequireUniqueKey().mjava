  @Test
  public void testRequireUniqueKey() throws Exception {
    // Add a valid document
    assertU(adoc("id","1"));

    // More than one id should fail
    assertFailedU(adoc("id","2", "id","3", "text","ignore_exception"));

    // No id should fail
    assertFailedU(adoc("text","ignore_exception"));
  }

