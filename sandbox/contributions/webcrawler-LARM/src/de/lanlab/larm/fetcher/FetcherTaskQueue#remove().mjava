    /**
     * get the next task. warning: not synchronized
     *
     * @return   Description of the Return Value
     */
    public Object remove()
    {
        FetcherTask t = null;
        if (servers.size() > 0)
        {
            Queue q = (Queue) servers.next();
            // assert(q != null && q.size() > 0)
            t = (FetcherTask)q.remove();
            if (q.size() == 0)
            {
                servers.removeCurrent();
                q = null;
            }
            size--;
        }
        return t;
    }

