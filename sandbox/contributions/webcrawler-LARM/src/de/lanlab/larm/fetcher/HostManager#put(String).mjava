    public HostInfo put(String hostName)
    {
        if (!hosts.containsKey(hostName))
        {
            int hostID;
            synchronized (this)
            {
                hostID = hostCount++;
            }
            HostInfo hi = new HostInfo(hostName,hostID);
            hosts.put(hostName, hi);
            return hi;
        }
        return (HostInfo)hosts.get(hostName);
