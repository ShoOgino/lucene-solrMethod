    /**
     * this method will be called when the task ends. It notifies all
     * of its observers about its changed state
     */
    protected void taskReady()
    {
        task = null;
        busy = false;
        Iterator Ie = listeners.iterator();
        while(Ie.hasNext())
        {
            ((TaskReadyListener)Ie.next()).taskReady(this);
        }
    }

