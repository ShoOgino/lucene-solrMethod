    protected DbOutputStream(Db files, Db blocks, DbTxn txn,
                             String name, boolean create)
        throws IOException
    {
        super();

        this.files = files;
        this.blocks = blocks;
        this.txn = txn;

        file = new File(files, blocks, txn, name, create);
        block = new Block(file);
        length = file.getLength();

        seek(length);
        block.get(blocks, txn);
    }

